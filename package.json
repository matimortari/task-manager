		"@testing-library/jest-dom": "6.6.3",
		"@testing-library/react": "16.1.0",
		"@types/jest": "29.5.14",
		"@types/node": "22.10.2",
		"@types/react": "18.3.3",
		"@types/react-dom": "18.3.0",
		"@vitejs/plugin-react": "4.3.4",
		"@vitest/coverage-v8": "2.1.8",
		"dotenv-cli": "8.0.0",
		"eslint": "9.17.0",
		"eslint-plugin-react": "7.37.3",
		"eslint-plugin-tailwindcss": "3.17.5",
		"globals": "15.14.0",
