		"@vercel/analytics": "1.3.1",
		"autoprefixer": "10.4.20",
		"class-variance-authority": "0.7.0",
		"clsx": "2.1.1",
		"lucide-react": "0.408.0",
		"moment": "2.30.1",
		"next": "14.2.12",
		"next-auth": "4.24.7",
		"next-themes": "0.3.0",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-hot-toast": "2.4.1",
		"recharts": "2.12.7",
		"tailwind-merge": "2.4.0",
		"tailwindcss-animate": "1.0.7"
